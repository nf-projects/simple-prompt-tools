{
	"name": "nils-prompt-tools",
	"displayName": "nils-prompt-tools",
	"description": "A collection of VSCode tools to make AI development more efficient through prompt templates",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.91.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:nils-prompt-tools.helloWorld",
		"onCommand:nils-prompt-tools.openFilesToMarkdown",
		"onCommand:nils-prompt-tools.selectOpenFilesToMarkdown",
		"onCommand:nils-prompt-tools.copyCurrentFileToMarkdown"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "nils-prompt-tools.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "nils-prompt-tools.openFilesToMarkdown",
				"title": "Open Files to Markdown"
			},
			{
				"command": "nils-prompt-tools.selectOpenFilesToMarkdown",
				"title": "Select Open Files to Markdown"
			},
			{
				"command": "nils-prompt-tools.copyCurrentFileToMarkdown",
				"title": "Copy Current File to Markdown"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "nilsPromptTools",
					"title": "Prompt Tools",
					"icon": "$(symbol-keyword)"
				}
			]
		},
		"views": {
			"nilsPromptTools": [
				{
					"id": "promptToolsView",
					"name": "Prompt Tools"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "promptToolsView",
				"contents": "No prompt tools available."
			}
		],
		"colors": [
			{
				"id": "promptTools.buttonBackground",
				"description": "Background color of Prompt Tools buttons",
				"defaults": {
					"dark": "#0e639c",
					"light": "#007acc",
					"highContrast": "#0e639c"
				}
			},
			{
				"id": "promptTools.buttonForeground",
				"description": "Foreground color of Prompt Tools buttons",
				"defaults": {
					"dark": "#ffffff",
					"light": "#ffffff",
					"highContrast": "#ffffff"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.91.0",
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.11.0",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5",
		"ts-loader": "^9.5.1",
		"webpack": "^5.92.1",
		"webpack-cli": "^5.1.4",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0"
	}
}
