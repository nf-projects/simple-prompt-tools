{
	"name": "nils-prompt-tools",
	"displayName": "nils-prompt-tools",
	"description": "A collection of VSCode tools to make AI development more efficient through prompt templates",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.91.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "nils-prompt-tools.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "nils-prompt-tools.openFilesToMarkdown",
				"title": "Prompt Tools: Open Files to Markdown"
			},
			{
				"command": "nils-prompt-tools.selectOpenFilesToMarkdown",
				"title": "Prompt Tools: Select Open Files to Markdown"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.91.0",
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.11.0",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5",
		"ts-loader": "^9.5.1",
		"webpack": "^5.92.1",
		"webpack-cli": "^5.1.4",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0"
	}
}
